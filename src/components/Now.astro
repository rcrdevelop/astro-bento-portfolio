---
import Card from "./Card/index.astro";
import Pulse from "./Pulse.astro";
const { agencyName, currentRole, status } = Astro.props;
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2">
  <small class="font-bold text-xs text-green-400"> BUSINESS PARTNES </small>
  <div class="flex justify-between w-full items-center mb-2 font-bold">
    {agencyName}
    <Pulse status={status} />
  </div>
  <p class="text-xs"> {status} as {currentRole}</p>
</Card>
