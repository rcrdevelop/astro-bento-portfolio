---
import Card from "./Card/index.astro";
import Pulse from "./Pulse.astro";
import PulseWarning from "./PulseWarning.astro";
import { LINKS } from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold">
        Currently Job In Remote as Freelancer
      </h1>
    </header>
    <div class="flex flex-col w-full gap-5 mt-4">
      <h2>Available To:</h2>
      <ul class="w-full gap-5">
        <li class="flex gap-5 items-center"><span>Work Remote</span><Pulse /></li>
        <li class="flex gap-5 items-center"><span>Work Partial Time</span><Pulse /></li>
        <li class="flex gap-5 items-center"><span>Work Full Time</span><PulseWarning /></li>
      </ul>
    </div>
  </div>
</Card>
